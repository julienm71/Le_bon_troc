      <p><i class="fa fa-list"></i> <%= link_to "Retour au panel administrateur",  admin_annonces_path %> <!-- | <i class="fa fa-history"></i> <%= link_to "Retour aux annonces",  annonces_path %> --></p>
    </div> -->
  <% end %>
</div>
