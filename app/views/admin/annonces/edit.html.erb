<div class="container">
  <h3> (Admin) Modifier l'annonce - <%= @annonce.titre %> contre <%= @annonce.contre %></h3>
  <hr>
  <div class="form-standard">
    <%= simple_form_for @annonce do |f| %>
    <%= f.error_notification %>
      <div class="form-group">
          <%= f.label :titre, 'Que voulez vous échanger ?' %>
          <%= f.text_field :titre, class: "form-control", required: true %>
      </div>
      <div class="form-group">
          <%= f.label :description, 'Description de votre produit' %>
          <%= f.text_area :description, class: "form-control", required: true %>
      </div>
      <div class="form-group">
          <%= f.label :raison, 'Pourquoi voulez vous échanger ce produit ?' %>
          <%= f.text_area :raison, class: "form-control", required: true %>
      </div>
      <div class="form-group">
          <%= f.label :contre, 'Que désirez vous en échange ?' %>
          <%= f.text_field :contre, class: "form-control", required: true %>
      </div>
      <hr>
      <div class="form-group">
        <%= f.label :photo, 'Choissisez au moins une photo de votre produit depuis votre ordinateur:' %>
        <%= f.input :photo, label: false, required: true, :input_html => { :value => @annonce.photo } %>
        <div class="text-right"><%= cl_image_tag @annonce.photo, alt: "Image", crop: :scale, width: 200, height: 150%></div>
        <%= f.input :photo2, label: false, required: false, :input_html => { :value => @annonce.photo2 } %>
        <div class="text-right"><%= cl_image_tag @annonce.photo2, alt: "Image", crop: :scale, width: 200, height: 150%></div>
        <%= f.input :photo3, label: false, required: false, :input_html => { :value => @annonce.photo3 } %>
        <div class="text-right"><%= cl_image_tag @annonce.photo3, alt: "Image", crop: :scale, width: 200, height: 150%></div>
      </div>
      <hr>
      <div class="form-group">
          <%= f.input :autrepropositions, class: "form-control", label: 'Laisser les utilisateur vous proposez d\'autres objets en échange ?', :as => :boolean %>
      </div>
      <hr>
      <div class="form-group">
        <p>Choisissez votre mode d'échange:</p>
        <p><%= f.radio_button :typeechange, '0' %> Seulement remise en main propre</p>
        <p><%= f.radio_button :typeechange, '1' %> Seulement par voie postal</p>
        <p><%= f.radio_button :typeechange, '2' %> Les deux</p>
      </div>
      <hr>
      <%= f.submit "Mettre l'annonce à jour", class: "btn btn-outline-primary" %>
    <% end %>
  </div>
</div>
