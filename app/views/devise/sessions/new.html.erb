<div class="container">
  <div class="row">
    <div class="col-4"></div>
    <div class="col-4">
      <div class="form-devise">
        <h2>Se connecter</h2>
        <hr>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, placeholder: "bob@gmail.com" %>
          <%= f.input :password,label: 'Mot de passe', required: false, placeholder: "••••••" %>
          <%= f.input :remember_me,label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Connexion", class: "btn btn-success" %>
        </div>
        <%= render "devise/shared/links" %>
        <% end %>
      </div>
    </div>
    <div class="col-4"></div>
  </div>
</div>
