<div class="navbar-lebontroc sticky-top">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-lebontroc-brand" do %>
    <%= image_tag "logo.png", height: 175 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="d-none d-md-block">
    <div class="navbar-lebontroc-right">
      <%= link_to '<i class="far fa-newspaper"></i> Annonces'.html_safe, annonces_path, class: "navbar-lebontroc-item navbar-lebontroc-link" %>
      <% if user_signed_in? %>

        <!-- Links when logged in -->
        <%= link_to '<i class="fa fa-plus"></i> Déposer une annonce'.html_safe, new_annonce_path, class: "navbar-lebontroc-item navbar-lebontroc-link" %>
        <%= link_to '<i class="fa fa-list"></i> Mes annonces'.html_safe, vos_annonces_path, class: "navbar-lebontroc-item navbar-lebontroc-link" %>
        <%= link_to '<i class="fas fa-exchange-alt"></i> Mes échanges'.html_safe, vos_echanges_path, class: "navbar-lebontroc-item navbar-lebontroc-link" %>
        <% if current_user.admin == true %>
         <%= link_to '<i class="fas fa-user-shield"></i> Panel admin'.html_safe, admin_dashboard_index_path, class: "navbar-lebontroc-item navbar-lebontroc-link" %>
        <% end %>

        <!-- Avatar with dropdown menu -->
        <div class="navbar-lebontroc-item">
          <div class="dropdown">
            <%= link_to '<i class="fa fa-user"></i> Mon compte'.html_safe, "#", class: "navbar-lebontroc-link dropdown-toggle", id: "navbar-lebontroc-menu", "data-toggle" => "dropdown" %>
            <ul class="dropdown-menu dropdown-menu-right navbar-lebontroc-dropdown-menu">
              <li><%= link_to '<i class="fas fa-envelope"></i> Messages'.html_safe, conversations_path, class: "navbar-lebontroc-item navbar-lebontroc-link" %></li>
<!--               <li><%= link_to '<i class="fas fa-exchange-alt"></i> Echanges'.html_safe, vos_echanges_path, class: "navbar-lebontroc-item navbar-lebontroc-link" %></li> -->
              <li>
                <%= link_to edit_user_registration_path do %>
                  <i class="fa fa-cog"></i> <%= t(".profile", default: "Profile") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      <% else %>
        <!-- Login link (when logged out) -->
        <%= link_to t(".sign_in", default: "Connexion"), new_user_session_path, class: "navbar-lebontroc-item btn btn-outline-primary" %>
        <%= link_to "Inscription", new_user_registration_path, class: "navbar-lebontroc-item btn btn-outline-primary", style: 'margin-left:10px;' %>
      <% end %>
    </div>
  </div>

  <!-- Dropdown list appearing on mobile only -->

  <div class="navbar-lebontroc-item d-block d-md-none">
    <div class="dropdown flex-nav-mobile">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-lebontroc-dropdown-menu">
        <li><%= link_to '<i class="far fa-newspaper"></i> Annonces'.html_safe, annonces_path, class: "navbar-lebontroc-item navbar-lebontroc-link" %></li>
        <% if user_signed_in? %>
          <li><%= link_to '<i class="fa fa-plus"></i> Déposer une annonce'.html_safe, new_annonce_path, class: "navbar-lebontroc-item navbar-lebontroc-link" %></li>
          <li><%= link_to '<i class="fa fa-list"></i> Mes annonces'.html_safe, vos_annonces_path, class: "navbar-lebontroc-item navbar-lebontroc-link" %></li>
          <li><%= link_to '<i class="fas fa-exchange-alt"></i> Echanges'.html_safe, vos_echanges_path, class: "navbar-lebontroc-item navbar-lebontroc-link" %></li>
          <li><%= link_to '<i class="fas fa-envelope"></i> Messages'.html_safe, conversations_path, class: "navbar-lebontroc-item navbar-lebontroc-link" %></li>
          <% if current_user.admin == true %>
           <li><%= link_to '<i class="fas fa-user-shield"></i> Panel admin'.html_safe, admin_dashboard_index_path, class: "navbar-lebontroc-item navbar-lebontroc-link" %></li>
          <% end %>
          <li>
            <%= link_to edit_user_registration_path, class: "navbar-lebontroc-item navbar-lebontroc-link" do %>
              <i class="fa fa-cog"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, class: "navbar-lebontroc-item navbar-lebontroc-link", method: :delete do %>
              <i class="fa fa-sign-out-alt"></i> <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        <% else %>
          <li><%= link_to new_user_session_path, class: "navbar-lebontroc-item navbar-lebontroc-link", style: 'color:white;' do %>
            <i class="fa fa-sign-in-alt"></i> <%= t(".sign_in", default: "Connexion") %>
            <% end %>
          </li>
<!--           <li><i class="fa fa-pencil-alt"></i><%= link_to "Inscription", new_user_registration_path, class: "navbar-lebontroc-item navbar-lebontroc-link", style: 'color:white;' %></li> -->
          <li><%= link_to new_user_registration_path, class: "navbar-lebontroc-item navbar-lebontroc-link", style: 'color:white;' do %>
            <i class="fa fa-pencil-alt"></i> Inscription
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
